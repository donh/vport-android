<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/mian_background">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relative_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="vPort"
            android:textColor="#fff"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgv_main_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="8dp"
            android:scaleType="center"
            android:src="@drawable/icon_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/tv_main_title"/>
    </android.support.constraint.ConstraintLayout>


    <View
        android:id="@+id/view_main_divider"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/relative_main_title"
        android:background="#aaffffff"/>

    <LinearLayout
        android:id="@+id/linear_main_menu"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/view_main_divider"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relative_visiting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/imgv_main_business_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:src="@drawable/icon_business_card"/>

            <TextView
                android:id="@+id/tv_main_business_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgv_main_business_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="VPort名片"
                android:textColor="#fff"
                android:textSize="12sp"/>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:background="#aaffffff"/>

        <RelativeLayout
            android:id="@+id/relative_identity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/imgv_main_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:src="@drawable/icon_more"/>

            <TextView
                android:id="@+id/tv_main_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgv_main_information"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="身份信息"
                android:textColor="#fff"
                android:textSize="12sp"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05"
            android:background="#aaffffff"/>

        <RelativeLayout
            android:id="@+id/relative_operation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:id="@+id/imgv_main_operation_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:src="@drawable/icon_remind"/>

            <TextView
                android:id="@+id/tv_main_operation_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgv_main_operation_record"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="操作记录"
                android:textColor="#fff"
                android:textSize="12sp"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_main_divider_two"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/linear_main_menu"
        android:background="#aaffffff"/>

    <ImageView
        android:id="@+id/imgv_main_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_main_divider_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/icon_scan"/>

    <TextView
        android:id="@+id/tv_main_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgv_main_scan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="扫一扫"
        android:textColor="#ffffff"
        android:textSize="14sp"/>
</RelativeLayout>
