<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_claim_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/relative_auth_dialog_title"
        android:layout_width="300dp"
        android:layout_height="58dp">

        <TextView
            android:id="@+id/tv_auth_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#363636"
            android:textSize="15sp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/imgv_auth_dialog_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:src="@drawable/icon_close" />

    </RelativeLayout>

    <View
        android:id="@+id/divider_auth_dialog_one"
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:layout_below="@+id/relative_auth_dialog_title"
        android:background="#15454545" />

    <RelativeLayout
        android:id="@+id/relative_claim_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_auth_dialog_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/imgv_auth_dialog_user"
            android:layout_width="75dp"
            android:layout_height="75dp" />

        <ImageView
            android:id="@+id/imgv_claim_transformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/imgv_auth_dialog_user"
            android:src="@drawable/icon_login_arrow" />


        <ImageView
            android:id="@+id/imgv_auth_dialog_server"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@+id/imgv_claim_transformation"
            android:src="@drawable/icon_company" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_auth_dialog_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_claim_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#363636"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_auth_dialog_permission_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_auth_dialog_hint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="授权使用我的身份证，头像，昵称等信息"
        android:textColor="#dd454545"
        android:textSize="10sp" />

    <View
        android:id="@+id/divider_auth_dialog_two"
        android:layout_width="300dp"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_auth_dialog_permission_hint"
        android:layout_marginTop="15dp"
        android:background="#15454545" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_auth_dialog_two"
        android:layout_centerHorizontal="true"
        android:paddingBottom="40dp"
        android:paddingTop="25dp">


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_auth_dialog_cancel"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:background="@drawable/login_cancel_background"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_auth_dialog_ok"
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/bt_auth_dialog_cancel"
            android:background="@drawable/login_send_background"
            android:text="授权"
            android:textColor="#ffffff"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>