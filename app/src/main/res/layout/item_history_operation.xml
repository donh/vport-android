<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="109dp"
    android:background="@null"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_item_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/icon_logo"/>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:textColor="#252525"
        android:textSize="@dimen/common_text_smallerSize"
        app:layout_constraintLeft_toRightOf="@+id/img_item_head"
        app:layout_constraintRight_toLeftOf="@+id/tv_item_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="A应用"/>

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/common_text_smallerSize"
        app:layout_constraintLeft_toRightOf="@+id/img_item_head"
        app:layout_constraintRight_toLeftOf="@+id/tv_item_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title"
        tools:text="CONTRAC"/>

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/common_text_smallerSize"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="授权成功"/>


    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:src="@drawable/icon_enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"/>
</android.support.constraint.ConstraintLayout>