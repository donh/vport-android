<resources>

    <style name="VPortTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Personal_Info_content">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Personal_Info_Count">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#555555</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Setting_text_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:drawableEnd">@drawable/icon_enter</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
