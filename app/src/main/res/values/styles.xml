<resources>

    <style name="VPortTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Personal_Info_content">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Personal_Info_Count">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#555555</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Setting_text_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:drawableEnd">@drawable/icon_enter</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="perfect_identity_info_key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">#898989</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="perfect_identity_info_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#363636</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="operation_info_accredit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="operation_info_accredit_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="operation_info_accredit_layout_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/common_text_smallerSize</item>
    </style>
    <style name="operation_info_accredit_layout_content">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#252525</item>
        <item name="android:textSize">@dimen/common_text_smallerSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right</item>
        <item name="android:lines">1</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>
</resources>
